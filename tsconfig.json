{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"strict": true,
		"outDir": "./dist",
		"declaration": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["lib"]
}